#!/bin/zshch

ng build --configuration production

cd .docker

export DOCKER_HOST=tcp://d3.sgx.bz:6060
export DOCKER_TLS_VERIFY=1
export DOCKER_CERT_PATH=~/.docker/d3-ssl

docker build .. --file ../.docker/Dockerfile -t dkr.sgx.bz/vip-ui:latest
docker push dkr.sgx.bz/vip-ui
docker compose -f vip-ui.yml -p vip up -d

echo "VIP UI is build..."
exit 0
