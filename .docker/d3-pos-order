#!/bin/zshch

ng build --configuration production

cd .docker

export DOCKER_HOST=tcp://d3.sgx.bz:6060
export DOCKER_TLS_VERIFY=1
export DOCKER_CERT_PATH=~/.docker/d3-ssl

docker build .. --file ../.docker/Dockerfile -t dkr.sgx.bz/pos-order:latest
docker push dkr.sgx.bz/pos-order
docker compose -f pos-order.yml -p pos-order up -d

echo "POS Order is build..."
exit 0
